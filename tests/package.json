{
  "name": "twocups-firestore-rules-tests",
  "version": "1.0.0",
  "description": "Firestore security rules tests for TwoCups",
  "type": "module",
  "scripts": {
    "test": "firebase emulators:exec --only firestore 'node --experimental-vm-modules node_modules/jest/bin/jest.js'",
